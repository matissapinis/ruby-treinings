<% # MA: Display database records in plain HTML table: %>
<div id="responses">
  <table id="responses">
    <thead>
      <tr>
        <th>#</th>
        <th>Undergraduate continent</th>
        <th>Years(P(HLMI|Non-disruption):=10%)</th>
        <th>Years(P(HLMI|Non-disruption):=50%)</th>
        <th>Years(P(HLMI|Non-disruption):=90%)</th>
        <th>HLMI timelines reflection</th>
        <th>P(Impact=Extremely good|HLMI)</th>
        <th>P(Impact=Net good|HLMI)</th>
        <th>P(Impact=Neutral|HLMI)</th>
        <th>P(Impact=Net bad|HLMI)</th>
        <th>P(Impact=Extremely bad|HLMI)</th>
        <th>HLMI impacts reflection</th>
        <th>Priority(Safety|Current)</th>
      </tr>
    </thead>
    <tbody>
    <% @responses.each do |response| %>
      <tr>
        <td><%= link_to(response.id, response) %></td>
        <td><%= response.undergrad_continent %></td>
        <td><%= response.hb_a_1_1 %></td>
        <td><%= response.hb_a_2_1 %></td>
        <td><%= response.hb_a_3_1 %></td>
        <td><%= response.dem_1 %></td>
        <td><%= response.vb_1_1 %></td>
        <td><%= response.vb_1_2 %></td>
        <td><%= response.vb_1_3 %></td>
        <td><%= response.vb_1_4 %></td>
        <td><%= response.vb_1_5 %></td>
        <td><%= response.dem_2 %></td>
        <td><%= response.sr_1 %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
